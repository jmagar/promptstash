{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf dist .turbo node_modules",
    "dev": "nodemon --exec \"node -r esbuild-register ./src/index.ts\" -e .ts",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "check-types": "tsc --noEmit",
    "start": "node dist/index.js",
    "test": "jest --detectOpenHandles --coverage"
  },
  "prettier": "@workspace/prettier-config",
  "jest": {
    "preset": "@workspace/jest-presets/node"
  },
  "dependencies": {
    "@workspace/auth": "workspace:*",
    "@workspace/db": "workspace:*",
    "@workspace/observability": "workspace:*",
    "@workspace/rate-limit": "workspace:*",
    "@workspace/utils": "workspace:*",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "catalog:server",
    "csrf-csrf": "^4.0.3",
    "dotenv": "catalog:core",
    "express": "catalog:server",
    "express-validator": "^7.3.1",
    "helmet": "catalog:server",
    "morgan": "catalog:server",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "catalog:core"
  },
  "devDependencies": {
    "@jest/globals": "catalog:dev",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "catalog:server",
    "@types/express": "catalog:server",
    "@types/morgan": "catalog:server",
    "@types/node": "catalog:dev",
    "@types/supertest": "catalog:dev",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/jest-presets": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "esbuild": "catalog:dev",
    "esbuild-register": "catalog:dev",
    "eslint": "catalog:eslint",
    "jest": "catalog:dev",
    "nodemon": "catalog:dev",
    "supertest": "catalog:dev",
    "ts-jest": "catalog:dev",
    "typescript": "catalog:dev"
  }
}
