# Node Environment
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_BASE_URL=http://localhost:3100
NEXT_PUBLIC_API_URL=http://localhost:3300/api

# Authentication - Better Auth
# Generate BETTER_AUTH_SECRET with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
BETTER_AUTH_URL=http://localhost:3100
BETTER_AUTH_SECRET=your-betterauth-secret-min-32-chars

# Database Connection
# Include connection pooling parameters for optimal performance:
# Development:
DATABASE_URL="postgresql://postgres:password@postgres:5432/build-elevate-app?connection_limit=10&pool_timeout=20&connect_timeout=10"
# Production (adjust limits based on instance size):
# DATABASE_URL="postgresql://user:pass@host:5432/db?connection_limit=40&pool_timeout=10&connect_timeout=5&sslmode=require"

# Email Service - Resend
RESEND_TOKEN=your-resend-token
RESEND_EMAIL_FROM=delivered@resend.dev

# Rate Limiting - Upstash Redis
UPSTASH_REDIS_REST_URL=your-upstash-redis-rest-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-rest-token